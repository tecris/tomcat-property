<?xml version="1.0" encoding="UTF-8"?>

<Context>
    <Resource name="jdbc/MySqlDS"
        auth="Container"
        driverClassName="com.mysql.jdbc.Driver"
        type="javax.sql.DataSource"
        username="${db.username}"
        password="${db.password}"
        url="jdbc:mysql://${db.url}:3306/${db.name}"/>
</Context>
